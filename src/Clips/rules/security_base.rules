(deffunction reject (?reason) (assert (Clips\Reject (reason ?reason))))

;===============================================================================
;
; Global rules
;
;===============================================================================

(defrule turn-action-uri-to-segments
	(Clips\SecurityItem (type "action") (content ?content&~nil))
	=>
	(assert (uri-segs (explode "/" ?content)))
)
