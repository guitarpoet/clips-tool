{
	"header": "Clips Widget Generator v1.0",
	"steps": [
		{
			"prompt": "The name of the widget:",
			"field": "widget",
			"rules": {
				"minlength": 4,
				"maxlength": 10
			}
		},
		{
			"prompt": "Widget Author:",
			"field": "author",
			"default": "!Clips\\current_user"
		},
		{
			"prompt": "Widget Version:",
			"default": "1.0",
			"field": "version"
		},
		{
			"prompt": "Widget Doc:",
			"field": "doc"
		},
		{
			"prompt": "The widget configuration is:",
			"call": "dump"
		},
		{
			"prompt": "Are you sure:",
			"confirm": true,
			"condition": {
				"cancel": [{"jump": 0}]
			}
		}
	]
}
